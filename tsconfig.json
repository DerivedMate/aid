{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react",
    "checkJs": false,
    "allowJs": false,
    "importHelpers": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./server/@types",
      "./node_modules/@types",
      "./src/@types",
      "./config/@types",
      "./shared/query",
      "./shared/api"
    ],
    "lib": ["WebWorker", "DOM"],
    "paths": {
      "@/*": ["./src/*"],
      "%/*": ["./shared/*"]
    }
  },
  "exclude": [
    "build",
    "stats",
    "reports",
    "public",
    "coverage",
    "server",
    ".vscode",
    ".github",
    "**/node_modules/**",
    "config/test/**"
  ]
}
